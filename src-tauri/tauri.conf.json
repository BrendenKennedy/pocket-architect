{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Pocket Architect",
  "version": "0.1.0",
  "identifier": "com.pocketarchitect.app",
  "build": {
    "frontendDist": "../src/build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run frontend:dev",
    "beforeBuildCommand": "npm run frontend:build"
  },
  "app": {
    "windows": [
      {
        "title": "Pocket Architect",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "http": {
      "all": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterBundle": true,
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "signCommand": null
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "updater": {
    "active": true,
    "endpoints": [
      "https://github.com/YOUR_USERNAME/pocket-architect/releases/latest/download/latest.json"
    ],
    "dialog": true,
    "pubkey": "YOUR_UPDATER_PUBLIC_KEY_HERE"
  }
}
